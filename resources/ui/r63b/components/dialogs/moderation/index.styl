.moderation
	width 155px
	height 160px
	font-size 10px
	font-weight bold
	position absolute
	left 1em
	top 5em

	.header
		cursor grab
		margin 10px 0px

		&:active
			cursor grabbing

		p
			display inline-block
			padding 0px 10px

		.close
			margin 5px 5px 0px 10px
			padding 3px
			display inline-block
			cursor pointer
			height 15px
			width 15px
			float right
			border 1px solid #A3A3A3
			border-radius 4px
			box-shadow  inset 0px 1px 0px 0px #E0E0E0,
						inset 0px 3px 0px 0px #FFFFFF,
						0px 1px 0px 0px #F5F5F5

	.content
		padding 0px 10px 10px 10px

		ul.options
			padding 0
			list-style none

			li
				margin-bottom 10px
				cursor pointer
				
				span
					padding 0
					margin-left 3px
					line-height 0px
