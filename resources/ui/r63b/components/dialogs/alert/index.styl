.dialog.alert
	width 350px
	min-height 180px
	top: calc(50% - 120px)
	left: calc(50% - 180px)
	
	& .content
		font-family: inherit
		margin 0 10px
		font-weight 300

		& .author
			margin 20px 0 0 0

	& .image
		float left
		display inline
		margin-right 10px

	& .footer
		margin-top 15px
		padding 6px
		position relative
		text-align center

		&::before
			content ''
			position absolute
			top 0
			left 0
			right 0
			display block
			height 0px
			border-top solid 1px #CCCCCC
			border-bottom solid 1px #FFFFFF

	& .button
		font-family: inherit
		display inline-block
		border solid 2px #000
		border-bottom solid 4px #000
		border-radius 4px
		padding 5px 10px
		font-weight bold
		cursor pointer
		background #E2E2E2
		outline none
		box-shadow inset -2px 0px 0 0 #CACACA,
					inset 0px 1px 0 0 #CACACA,
					inset 1px 0px 0 0 #CACACA,
					inset 0px -10px 0 0 #CACACA

		&:hover
			background #F3F3F3
			box-shadow inset -2px 0px 0 0 #D9D9D9,
						inset 0px 1px 0 0 #D9D9D9,
						inset 1px 0px 0 0 #D9D9D9,
						inset 0px -10px 0 0 #D9D9D9

		&:active
			background #D5D3D5
			box-shadow inset -2px 0px 0 0 #999899,
						inset 0px 1px 0 0 #999899,
						inset 1px 0px 0 0 #999899,
						inset 0px -10px 0 0 #999899
