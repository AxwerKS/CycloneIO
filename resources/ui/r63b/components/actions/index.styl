.actions
	z-index 10
	position absolute
	top 12px
	left 12px
	
	.action
		background #FFB900
		border 2px solid #FFEA00
		border-radius 5px
		box-shadow 0 3px 0 1px rgba(0,0,0,.3)
		outline none
		cursor pointer
		padding 6px 12px

		&:first-child
			border-top-right-radius 0
			border-bottom-right-radius 0

		&:last-child
			border-top-left-radius 0
			border-bottom-left-radius 0
	
		&:not(:last-child)
			margin-right 4px