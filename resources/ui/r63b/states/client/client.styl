@import '../../fonts'
@import '../../variables'

.client
	& .hotel
		z-index: 0
		display block
		position fixed
		height: calc(100% - 53px)
		width: 100%
		background-color: #68E5FF
		background: url('http://habboo-a.akamaihd.net/c_images/reception/marchband19_background_left.png') left bottom no-repeat,
				   url('http://habboo-a.akamaihd.net/c_images/reception/background_right_easter2016.png') right bottom no-repeat,
	               url('http://habboo-a.akamaihd.net/c_images/reception/marchband19_background_gradient.png') repeat,
	               url('http://habboo-a.akamaihd.net/c_images/reception/meter_level_1_vip_icon_lympix.png') right bottom no-repeat

	& .toolbar
		z-index: 1
		display: block
		position: fixed
		bottom: 0
		background: rgba(46, 46, 44, 0.6)
		width: 100%
		height: 50px
		border-top: 2px solid #41403D
		border-bottom: 1px solid #41403D
