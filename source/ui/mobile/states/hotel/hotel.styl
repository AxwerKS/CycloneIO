@import '../../fonts.styl'
@import '../../components'

body
	margin 0
	position fixed
	overflow hidden
	font-family 'UbuntuCondensed'

*
	user-select none

a
	user-drag none

img
	user-select none
	user-drag none

user-drag(value)
	-webkit-user-drag value
	-khtml-user-drag value
	-moz-user-drag value
	-o-user-drag value
	user-drag value

whiteborder()
	filter drop-shadow(1px 1px 0 #fff) drop-shadow(-1px 1px 0 #fff) drop-shadow(1px -1px 0 #fff) drop-shadow(-1px -1px 0 #fff)

.client
	z-index 0
	display block
	position fixed
	background rgba(0, 0, 0, 1)
	height 100%
	width 100%
	//filter grayscale(100%)

	.hotel
		z-index: 1
		display block
		position fixed
		height 100%
		width 100%
		background-color #68E5FF
		background url('http://habboo-a.akamaihd.net/c_images/reception/may19_background_left.png'), 
				   url('http://habboo-a.akamaihd.net/c_images/reception/background_right_easter2016.png'),
				   url('http://habboo-a.akamaihd.net/c_images/reception/jan19_background_gradient.png')
		background-repeat no-repeat, no-repeat, repeat-x
		background-position left bottom, right bottom
		background-size auto, auto, 1% 100%
		color rgba(255, 255, 255, 1)

		.icon
			position absolute
			display inline-block
			top 0
			left 0
			margin 10px
			width 100px
			border-radius 18px
			cursor pointer

		h1
			font-size 4em
			font-weight 300
			text-align center

		.container
			position absolute
			margin-top 35px
			width 100%

			p
				font-size 18px
				text-align center

		.actions
			width 400px
			margin 0 auto
			font-size 2.5em
			font-weight 300

			.action 
				border-radius 28px
				padding 10px
				background rgba(255, 255, 255, 0.3)
				margin-bottom 20px
				cursor pointer

		.navigation
			position absolute
			margin 0
			padding 0
			padding-left 10px
			left 0
			bottom 0
			width 100%
			background-image linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5))

			.avatar
				width 128px
				padding 0
				margin 0
				whiteborder()
				display inline-block
				cursor pointer

			.news
				cursor pointer
				display inline-block
				position absolute
				margin-left 50px
				bottom 75px
				width 64px
				height 64px
				transform scale(1.8,1.8)
				transform-origin 0 0
				background-image url(https://habbay.me/themes/HabboSlopt/assets/images/pagetemplate.png)
				background-position -220px 0px
				background-repeat no-repeat
				whiteborder()

			.store
				cursor pointer
				display inline-block
				position absolute
				right 500px
				margin-left 15px
				bottom 75px
				width 64px
				height 64px
				transform scale(1.8,1.8)
				transform-origin 0 0
				background-image url(https://habbay.me/themes/HabboSlopt/assets/images/pagetemplate.png)
				background-position -80px 0px
				background-repeat no-repeat
				whiteborder()

			.friends
				cursor pointer
				display inline-block
				position absolute
				right 100px
				margin-left 15px
				bottom 75px
				width 64px
				height 64px
				transform scale(1.8,1.8)
				transform-origin 0 0
				background-image url(https://habbay.me/themes/HabboSlopt/assets/images/pagetemplate.png)
				background-position -0px 0px
				background-repeat no-repeat
				whiteborder()

			.center
				display inline-block

		.chatbar
			font-family 'UbuntuCondensed'
			font-size 1.5em
			outline 0
			position absolute
			left calc(50% - calc(375px / 2))
			bottom 40px
			border 0
			border-radius 3px
			box-shadow 0px -6px 0px 0px #6A6F73
			background #CDCFCE
			color #6D7F81
			padding 25px
			width 350px
			