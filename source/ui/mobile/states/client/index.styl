	$chatBarWidth = 300px
	.chatbar
		font-family 'UbuntuCondensed'
		font-size 1.5em
		outline 0
		position absolute
		left calc(50% - calc(375px / 2))
		bottom 40px
		border 0
		border-radius 3px
		box-shadow 0px -6px 0px 0px #6A6F73
		background #CDCFCE
		color #6D7F81
		padding 25px
		width $chatBarWidth
		-webkit-appearance: none