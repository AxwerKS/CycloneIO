canvas 
	zoom 150%

.client 
	background rbga(0, 0, 0, 1)
	width 100% 
	height 100%

.room
	.icon
		position absolute
		display inline-block
		top 0
		left 0
		margin 10px
		width 100px
		border-radius 18px
		cursor pointer


	.navigation
		position absolute
		margin 0
		padding 0
		padding-left 10px
		left 0
		bottom 0
		width 100%
		background-image linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5))

		.avatar
			width 128px
			padding 0
			margin 0
			whiteborder()
			display inline-block
			cursor pointer

		.news
			cursor pointer
			display inline-block
			position absolute
			bottom 50px
			width 85px
			height 95px
			transform scale(1.4,1.4)
			transform-origin 0 0
			background-image url(./mobile/icons.png)
			background-position -245px -320px
			background-repeat no-repeat

		.navigator
			cursor pointer
			display inline-block
			position absolute
			margin-left 140px
