{
    USER
    IP
    MACHINE
}

enum banStatus
{
    BANNED
    APPEALING
    REJECTED
}

enum roomType
{
    PUBLIC
    LOCKED
	PASSWORD
	HIDDEN
}

enum Gender
{
	M
	F
}

enum FurniType
{
    FLOOR
    WALL
}

enum CatalogPageLayout {
	DEFAULT,
	FRONTPAGE,
	CLUB_BUY,
	CLUB_GIFT,
	RECYCLER,
	RECYCLER_INFO,
	RECYCLER_PRIZES,
	TROPHIES,
	PLASTO,
