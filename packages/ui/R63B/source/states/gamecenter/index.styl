canvas
	zoom 100%

.client
	z-index 0
	display block
	position fixed
	background rgba(0, 0, 0, 1)
	height 100%
	width 100%
	//filter grayscale(100%)

	.gameparent
		z-index: 1
		display block
		position fixed
		height calc(100% - 50px)
		width 100%
		background-color #68E5FF
		background url('https://images.habbo.com/c_images/reception/rainbow19_background_gradient.png')
		background-repeat repeat-x
		background-position 100px top
		background-size 1% 100%

	.illumina-button
		margin-left 400px
		margin-top 30px
		padding 12px
		text-align center
		border 1px solid #919191
		border-radius 6px
		cursor pointer
		font-weight 900
		font-size 11px
		font-family 'Ubuntu'
		text-shadow 0.5px 0px #000000
		letter-spacing 0.5px
		background-image linear-gradient(to top, #D9D9D9 50%, #E2E2E2 50%)
		color #000
		outline none
		box-shadow inset 0 -10px 0px 0px #d8d8d8, inset 0px 3px 0px 0px #f8fcf8, 0px 1px 0px 0px #f8fcf8
		

	.gamecontainer
		margin auto
		width 1280px
		height calc(100% - 120px)
		background #4A95DF url('/games/speedway/banner.png') bottom no-repeat
		color black

		.banner
			position fixed 
			bottom 167px

		.game__container__leaderboards
			display inline-block
			margin 150px 0px 0px 0px
			width 30%

			.rankings
				height 230px

			fieldset
				width calc(100% - 50px)
				margin-bottom 10px
				height 275px
				border-radius 4px

				legend
					font-size 10px
					margin 0 10px
					padding 0 4px
					font-weight 600
					text-shadow 0 0.5px white
					letter-spacing 0.5px

				
				.leaderboards__achievement
					width 100%
					padding 5px

					.leaderboards__badge
						float left
						display inline-block
						margin-right 15px
						margin-left 2px
						margin-top 2px
					
					.leaderboards__achievement__name
						display inline-block
						font-size 11px

					p
						font-size 11px

				.leaderboards__ranking
					width 100%
					padding 0px 5px
					display relative 
					clear both

					.leaderboards__player
						float left
						display inline-block
						margin-right 5px
					
					.leaderboards__ranking__name
						display inline-block
						font-size 11px
						margin-top 10px

					p
						font-size 11px
				
		
		.game__container__content
			// margin auto
			display inline-block
			float left
			padding 100px 0px
			width 70%

			p.slogan
				text-align center
				font-size 13px
				margin-bottom 10px
				font-weight 600
				text-shadow 0 1px white

			.description
				margin-top 50px
				text-align center
				font-weight 300 
				font-size 12px

			.logo 
				margin-left 100px

			.prizes
				background #E2E2E2
				box-shadow inset 0 -5px 0px 0px #d8d8d8, inset 0px 3px 0px 0px #f8fcf8, 0px 1px 0px 0px #f8fcf8
				border-radius 8px
				border 1px solid black
				margin 40px 0px 0px 100px
				width 80%
				height 200px
				padding 4px 0px

				.rewards, .last_winner, .lucky_winners
					display inline-block
					width 33.33%
					height 100%

					h2
						text-align center
						text-transform uppercase
						font-size 11px

				.rewards 
					.timer
						width 99%
						bottom 0

	.picker
		position fixed
		z-index 1
		bottom 50px
		left 0
		right 0
		display flex
		flex-direction row
		justify-content space-between
		padding 6px
		height 120px
		background-color #253235
			

		.inner
			border 1px solid #7C8485
			box-shadow 0 1px 0 0 #161E1F
					//    inset 0 -1px 0 0 #7C8485,
					//    inset 1px 0 0 0 #7C8485,
					//    inset -1px 0 0 0 #7C8485
			border-radius 3px
			width 100%

			.title 
				position relative
				font-size 10px
				font-weight bold
				text-transform uppercase
				margin-left 2em
				padding 0 4px
				display inline

			.arcade
				position absolute
				display inline
				right 0
				bottom 0

			.content
				padding 6px 0px
				
				.game
					display inline-block
					margin-left 10px

					.selected
						padding 0
						border-radius 8px
						border 4px solid #eeeeee

					img 
						padding 4px

						&:hover
							padding 0
							border-radius 8px
							border 4px solid white