@import '../../fonts'
@import '../../variables'
@import '../../components/index.styl'


canvas
	zoom 100%

.client
	z-index 0
	display block
	position fixed
	background rgba(0, 0, 0, 1)
	height 100%
	width 100%
	//filter grayscale(100%)

	.gameparent
		z-index: 1
		display block
		position fixed
		height calc(100% - 50px)
		width 100%
		background-color #68E5FF
		background url('https://images.habbo.com/c_images/reception/rainbow19_background_gradient.png')
		background-repeat repeat-x
		background-position 100px top
		background-size 1% 100%

	.illumina-button
		margin-left 180px
		margin-top 50px
		padding: 12px;
		padding-left: 20px;
		text-align: center;
		padding-right: 20px;
		border: 1px solid #919191;
		border-radius: 6px;
		cursor: pointer;
		font-weight: 600;
		font-size: 11px;
		text-shadow: 1px 1px 1px #FFF;
		background-image linear-gradient(to top, #D9D9D9 50%, #E2E2E2 50%)
		color: #000;
		box-shadow 0px 1px 0px 0px #FFFFFF

	.gamecontainer
		margin auto
		width 1280px
		height calc(100% - 120px)
		background #4A95DF
		color black

		.banner
			position fixed 
			bottom 167px

		
		.game__container__content
			margin auto
			padding 100px
			width 50%

			p
				text-align center
				font-size 12px
				margin-bottom 10px

			.description
				margin-top 50px
				text-align center
				font-weight 300 
				font-size 12px

			.logo 
				margin-left -120px

	.picker
		position fixed
		z-index 1
		bottom 50px
		left 0
		right 0
		display flex
		flex-direction row
		justify-content space-between
		padding 6px
		height 120px
		background-color #253235
			

		.inner
			border 1px solid #7C8485
			box-shadow 0 1px 0 0 #161E1F
					//    inset 0 -1px 0 0 #7C8485,
					//    inset 1px 0 0 0 #7C8485,
					//    inset -1px 0 0 0 #7C8485
			border-radius 3px
			width 100%

			.title 
				position relative
				font-size 10px
				font-weight bold
				text-transform uppercase
				margin-left 2em
				padding 0 4px
				display inline

			.content
				padding 6px 0px
				
				.game
					display inline-block
					margin-left 10px

					.selected
						padding 0
						border-radius 8px
						border 4px solid #eeeeee

					img 
						padding 4px

						&:hover
							padding 0
							border-radius 8px
							border 4px solid white