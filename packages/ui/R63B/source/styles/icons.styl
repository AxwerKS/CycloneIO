.icon
    display: inline-flex;
    align-items: center;
    font-style: normal;

    &:before
        display: inline-block;
        image-rendering: pixelated;
        content: '';
    
    &.icon-messages:before
        background-image: url('/icons/messages.png')
        width: 17px
        height: 19px

    &.icon-help:before
        background-image: url('/icons/help.png')
        width: 5px
        height: 9px

    &.icon-carret-right:before, &.icon-carret-left:before
        background-image: url('/icons/carret_right.svg');
        width: 5px;
        height: 10px;

    &.icon-close:before
        background-image: url('/icons/close.svg')
        width 9px
        height 9px
  
    &.icon-carret-left:before
        transform: scaleX(-1);

    &.icon-close-thin:before
        background-image: url('icons/close_thin.svg')
        width 7px
        height 7px;

    &.icon-profile.icon-small

        &:before
            background-image: url('icons/small_profile.png')
            width: 13px
            height: 11px

        &:hover:before
            background-image: url('icons/small_profile_glow.png')
        
    &.icon-relation-skull:before
        background-image: url('icons/relationship-skull.png')
        width: 13px
        height: 13px

    &.icon-relation-friend:before
        background-image: url('icons/relationship-friend.png')
        width: 13px
        height: 13px

    &.icon-relation-heart:before
        background-image: url('icons/relationship-heart.png')
        width: 13px
        height: 13px
