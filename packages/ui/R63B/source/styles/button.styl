.btn
	font-family: inherit
	display inline-block
	border solid 2px #000
	border-bottom solid 4px #000
	border-radius 4px
	padding 5px 10px
	font-weight bold
	white-space nowrap
	background #E2E2E2
	outline none
	box-shadow
		inset -2px 0px 0 0 #CACACA,
		inset 0px 1px 0 0 #CACACA,
		inset 1px 0px 0 0 #CACACA,
		inset 0px -10px 0 0 #CACACA

	&:not([disabled])
		cursor pointer

	&.btn-small
		font-size 12px

	&:hover
		background #F3F3F3
		box-shadow
			inset -2px 0px 0 0 #D9D9D9,
			inset 0px 1px 0 0 #D9D9D9,
			inset 1px 0px 0 0 #D9D9D9,
			inset 0px -10px 0 0 #D9D9D9

	&:active
		background #D5D3D5
		box-shadow
			inset -2px 0px 0 0 #999899,
			inset 0px 1px 0 0 #999899,
			inset 1px 0px 0 0 #999899,
			inset 0px -10px 0 0 #999899


.btn-r63b
	height 20px
	padding 0 14px
	border 1px solid #000;
	border-radius 3px
	box-shadow inset 1px 0 0 0 #d9d9d9, inset -1px 0 0 0 #d9d9d9,
				inset 0 1px 0 0 #d9d9d9, 0 1px 0 0 #000000
	background linear-gradient(#f3f3f3 50%, #d9d9d9 50%, #d9d9d9 100%)

	&.btn-action
		height: 19px;
		width: 19px;
		padding: 0;
		border-bottom-width: 2px;

		&.btn-red
			background: linear-gradient(#bd3b2f 50%, #91241a 50%, #91241a 100%);
			box-shadow: inset 1px 1px 0 0 #de4537, inset -1px -1px 0 0 #de4537;

			&:hover
				box-shadow: inset 1px 1px 0 0 #fff, inset -1px -1px 0 0 #fff,
							inset 2px 2px 0 0 #e48880, inset -2px -2px 0 0 #e48880;
				
			&:active 
				background: linear-gradient(#91241a 50%, #7c0d09 50%, #7c0d09 100%);
				box-shadow: inset 1px 1px 0 0 #551510, inset -1px -1px 0 0 #aa2a1f;

			&.btn-blue 
				background: linear-gradient(#306686 50%, #1f5679 50%, #1f5679 100%);
				box-shadow: inset 1px 1px 0 0 #3986b1, inset -1px -1px 0 0 #3986b1;

				&:hover
					box-shadow: inset 1px 1px 0 0 #fff, inset -1px -1px 0 0 #fff,
								inset 2px 2px 0 0 #64acd9, inset -2px -2px 0 0 #64acd9;
				
				
				&:active
					background: linear-gradient(#1f5679 50%, #004365 50%, #004365 100%);
					box-shadow: inset 1px 1px 0 0 #003152, inset -1px -1px 0 0 #306686;

		&:active
			border-bottom-width: 1px;
				
			&>*
				filter: invert(1);


.btn

	&.btn-history
		height: 31px;
		border: 1px solid #000;
		background-color: #2a2924;
		box-shadow: inset 0 -1px 0 0 #1b1a17, inset 0 -3px 0 0 #3a3832, inset 0 0 0 2px #3a3832;

		&.btn-history-next
			border-top-left-radius: 0;
			border-bottom-left-radius: 0;

		&.btn-history-previous
			border-top-right-radius: 0;
			border-bottom-right-radius: 0;

		&[disabled]
			opacity 0.1

