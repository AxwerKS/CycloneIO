.toolbar
	position fixed
	z-index 1
	bottom 0
	left 0
	right 0
	display flex
	flex-direction row
	justify-content space-between
	padding 2px 0;
	height 50px
	border-top 2px solid #53524f
	border-bottom 1px solid #53524f
	background-color #2e2e2c
	box-shadow 0 -1px 0 0 rgba(0, 0, 0, .6)

	&.is-client
		background-color rgba(46, 46, 44, 0.66)

	.toolbar-more
		width 14px
		background-color #3a3832
		border-radius 8px
		position relative
		cursor pointer

		&::after
			content ''
			display block
			position absolute
			top 17px
			left 4px
			background-image url('r63b/toolbar/arrow.png')
			height 8px
			width 6px

		&.is-close
			&::after
				-moz-transform scaleX(-1);
				-o-transform scaleX(-1);
				-webkit-transform scaleX(-1);
				transform scaleX(-1);
				filter FlipH;
				-ms-filter "FlipH";

	.notification
		position absolute
		top 0
		right -3px
		height 17px
		min-width 17px
		background-color #ac1d19
		border-radius 5px
		font-style normal
		font-weight 100
		font-size 10px
		text-align center
		line-height 15px
		border 1px solid #000
		box-shadow inset 0 0 0 1px #ed2823, 0 1px 0 0 #000

	span.icon
		position relative

		&.icon-buildersclub::before
			background-image url('r63b/toolbar/icons/buildersclub.png')
			width 32px
			height 33px
		
		&.icon-catalogue::before
			background-image url('r63b/toolbar/icons/catalog.png')
			width 37px
			height 36px

		&.icon-rooms::before
			background-image url('r63b/toolbar/icons/rooms.png')
			width 44px
			height 30px

		&.icon-house::before
			background-image url('r63b/toolbar/icons/house.png')
			height 30px
			width 32px

		&.icon-inventory::before
			background-image url('r63b/toolbar/icons/inventory.png')
			height 41px
			width 44px

		&.icon-friendall::before
			background-image url('r63b/toolbar/icons/friend_all.png')
			height 33px
			width 32px

		&.icon-friendsearch::before
			background-image url('r63b/toolbar/icons/friend_search.png')
			height 33px
			width 29px

		&.icon-sendmessage::before
			background-image url('r63b/toolbar/icons/sendmessage.png')
			width 20px
			height 21px

		&.icon-profile::before
			background-image url('r63b/toolbar/icons/profile.png')
			width 21px
			height 21px
			
		&.icon-joinroom::before
			background-image url('r63b/toolbar/icons/joinroom.png')
			width 21px
			height 21px

		&.icon-habbo::before
			background-image url('r63b/toolbar/icons/habbo.png')
			width 28px
			height 28px

		&.icon-camera::before
			background-image url('r63b/toolbar/icons/camera.png')
			width 38px
			height 45px

		&.icon-gamecenter::before
			background-image url('r63b/toolbar/icons/game.png')
			width 44px
			height 25px

		&.icon-message
	
			&.is-unsee::before
				background-image url('r63b/toolbar/icons/message_unsee.gif')

			&::before
				background-image url('r63b/toolbar/icons/message.png')
				width 36px
				height 32px

		&::before
			content ''
			display inline-block
			position relative
			background-repeat no-repeat
			filter: drop-shadow(1px 1px 0 rgba(0, 0, 0, .30))
			cursor pointer

		&:hover
			top -1px
			left -1px

			&::before
				filter: drop-shadow(2px 2px 0 rgba(0, 0, 0, .50))
				

	.toolbar-icons-content
		margin 1px 0 2px 0
		display flex
		flex-direction row
		align-items center
		overflow hidden
		padding 0 11px

		.icon:not(:first-child)
			margin-left 15px

	.toolbar-actions
		display flex
		flex-direction row

		.toolbar-more
			border-top-left-radius 0
			border-bottom-left-radius 0

		.toolbar-icons-content
			border-right 1px solid #454442

			.user
				margin-left 0
				position relative
				height: 100%

				img 
					position relative
					top -25px

	.toolbar-friends
		display flex
		flex-direction row

		@import './components/friendSlot'
		
		.toolbar-more
			-moz-transform scaleX(-1);
			-o-transform scaleX(-1);
			-webkit-transform scaleX(-1);
			transform scaleX(-1);
			filter FlipH;
			-ms-filter "FlipH";

		.toolbar-friends-wrapper
			display: flex;
			flex-direction: row;
			align-items: center;
			margin-right 11px

			.btn-history-previous
				border-right-width: 0;

			.btn-history-next
				border-left-width: 0;

		.toolbar-friends-content
			display flex
			flex-direction row
			align-items flex-end
			align-self: center
			height 35px
			

		.toolbar-icons-content
			border-left 1px solid #454442

		