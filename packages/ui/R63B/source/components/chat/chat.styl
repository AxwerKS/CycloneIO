.chat
	z-index 10
	position relative

	&:after
		content: ''
		clear: both
		display: table

	.bubble
		z-index 11
		height 24px
		color black
		font-size 12px


		.avatar
			display inline-block
			position relative
			margin 0
			height 24px
			width 31px
			background url('/chat/avatar.png') no-repeat
			float left
			z-index 12

			img
				margin 2px 0 0 3px

		.body
			float left
			display inline-block
			position relative
			margin 0
			margin-left -7px
			height 24px
			max-height 24px
			background url(/chat/base.png) repeat-x
			background-size auto
			font-weight normal
			// background white

			.wrapper
				padding 5px 0px 0px 10px

				.name
					font-weight bold

				.name.whisper
					font-style italic
					color gray

				.message
					display inline

				.message.say
					font-weight 300

				.message.shout
					font-weight bold

				.message.whisper
					font-weight 300
					font-style italic
					color gray

		.close
			display inline-block
			width 10px
			height 24px
			background url('/chat/right.png') no-repeat
			// background-size 40px 24px

	.arrow
		z-index 12
		display block
		position absolute
		margin 0
		padding 0
		width 9px
		height 6px
		margin-left 50%
		margin-top -1px
		background url('/chat/pointer.png')
		background-repeat no-repeat
		background-position center bottom
