.alert
	z-index 2
	display: block
	position: fixed
	top: calc(50% - 120px)
	left: calc(50% - 180px)
	font-family: 'Ubuntu'
	background #E9E9E1
	padding 0px
	width 350px
	height 180px
	border-radius 8px
	box-sizing border-box
	border 1px solid black
	border-bottom 2px solid black
	font-size 12px
	color black

	.tab
		display: inline
		float: left
		border-top-left-radius: 6px
		border-top-right-radius: 6px
		border: 1px solid #4D4C49
		border-bottom: 0
		font-weight: 300
		font-size 1.005em
		padding 10px 0 5px 0
		max-height 32px
		width 108px
		text-align: center
		background: #C3C2B9
		cursor: pointer
		outline none

		&:hover
			background: #F6F5F0
			box-shadow inset -2px 0 0 0 #FFFFFF,
						inset 0 2px 0 0 #FFFFFF,
						inset 2px 0 0 0 #FFFFFF

		.active
			background: #ECEAE1
			border 2px solid #000000
			padding-bottom 6px
			border-bottom: 0
			box-shadow inset -2px 0 0 0 #FFFFFF,
						inset 0 2px 0 0 #FFFFFF,
						inset 2px 0 0 0 #FFFFFF

			&:hover
				background: inherit

			a
				display block
				text-align: center
