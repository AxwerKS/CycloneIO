.icon
    display: inline-flex;

    &:before
        display: inline-block;
        image-rendering: pixelated;
        content: '';
    
    &.icon-messages:before
        background-image: url('/icons/messages.png')
        width: 17px
        height: 19px

    &.icon-help:before
        background-image: url('/icons/help.png')
        width: 5px
        height: 9px

    &.icon-carret-right:before, &.icon-carret-left:before
        background-image: url('/icons/carret_right.svg');
        width: 5px;
        height: 10px;
  
    &.icon-carret-left:before
        transform: scaleX(-1);

    
