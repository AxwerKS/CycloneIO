{
  "packages": [
	"packages/server",
	"packages/housekeeping",
	"packages/desktop",
	"packages/mobile",
	"packages/client-themes/*"
  ],
  "npmClient": "npm",
  "command": {
		"publish": {
			"ignoreChanges": ["ignored-file", "*.md"],
			"message": "chore(release): publish"
		},
		"bootstrap": {
			"ignore": "component-*",
			"npmClientArgs": ["--no-package-lock"]
		}
  },
  "version": "independent"
}

