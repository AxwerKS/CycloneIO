{
    "compilerOptions": {

		"baseUrl": ".",
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		"resolveJsonModule": true,
		"strict": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["dom", "es2018"],
		"paths": { 
			"*": ["*", "./typeDefs/*"] 
		},
        "outDir": "./build",
    },
    "include": [
		"./source/**/*"
	],
	"exclude": [
		"node_modules"
	]
}